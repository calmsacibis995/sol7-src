objs/%.o \
profs/%.o \
pics/%.o:	%.c
		$(COMPILE.c) -o $@ $<
		$(POST_PROCESS_O)

objs/%64.o \
profs/%64.o \
pics/%64.o:	../common/%.c
		$(COMPILE.c) -D_ELF64 -o $@ $<
		$(POST_PROCESS_O)

objs/%.o \
profs/%.o \
pics/%.o:	../misc/%.c
		$(COMPILE.c) -DELF -o $@ $<
		$(POST_PROCESS_O)

objs/%.o \
profs/%.o \
pics/%.o:	../common/%.c
		$(COMPILE.c) -o $@ $<
		$(POST_PROCESS_O)

all:		$(BLTSRCS) .WAIT $(LIBS) $(LIBLINKS)

install:	all .WAIT $(ROOTLIBS) $(ROOTLINKS) $(ROOTDEMODIR) \
		.WAIT $(ROOTDEMOFILES)

lint:		$(LINTLIB)

$(LINTLIB):	$(XLINTOUT)

$(XLINTOUT):	$(LIBSRCS)
		$(LINT.c) $(LIBSRCS) $(LDLIBS) > $(XLINTOUT) 2>&1


delete:
		$(RM) $(DYNLIB)

$(DYNLIB):	$(MAPFILE)

$(LIBLINKS):
	$(RM) $(LIBLINKS)
	$(SYMLINK) $(DYNLIB) $(LIBLINKS)

# include common library targets
#
include		$(SRC)/lib/Makefile.targ


$(ROOTDEMODIR):
		$(INS.dir)

$(ROOTDEMODIR)/%:	../demo/%
		$(INS.file)

xlate.c:	../common/xlate.m4
		$(M4) < ../common/xlate.m4 > xlate.c

xlate64.c:	../common/xlate64.m4
		$(M4) < ../common/xlate64.m4 > xlate64.c


objs/msg.o \
pics/msg.o \
profs/msg.o:	msg.c

objs/error.o \
pics/error.o \
profs/error.o:	msg.h

objs/ar.o \
pics/ar.o \
profs/ar.o:	msg.h

objs/xlate.o \
pics/xlate.o \
profs/xlate.o:	xlate.c

#
# Targets needed to support running of Warlock, warlock can be
# located at:
#	suntools.eng:/export/tools/internal/warlock
#
# to use add the following to your path:
#	export PATH=/net/suntools.eng/export/tools/internal/warlock/bin:$PATH
#
.PARALLEL: $(WARLOCKFILES)
warlock: wlocks .WAIT warlock_files
	warlock -c ../common/libelf.wlcmd $(WARLOCKFILES)

warlock_files: $(BLTSRCS) .WAIT $(WARLOCKFILES)

wlocks:
	-@mkdir -p $@

wlocks/%.ll:	%.c
	wlcc $(CFLAGS) $(CPPFLAGS) -o $@ $<

wlocks/%.ll:	../misc/%.c
	wlcc $(CFLAGS) $(CPPFLAGS) -o $@ $<

wlocks/%.ll:	../common/%.c
	wlcc $(CFLAGS) $(CPPFLAGS) -o $@ $<


# Special target for native builds (ie. when we need to build a version of ld
# to build a version of ld :-).

native:		$(SGSPROTO)/$(DYNLIB)

native:=	DYNFLAGS += -znoversion

$(SGSPROTO)/$(DYNLIB): \
		pics .WAIT $$(PICS)
		$(BUILD.SO)
		$(POST_PROCESS_SO)
		-@$(RM) $(SGSPROTO)/$(LIBLINKS)
		$(SYMLINK) $(DYNLIB) $(SGSPROTO)/$(LIBLINKS)


# Derived source and header files (messaging).  Make sure that the sgsmsg
# command is constructed - libelf might not be built with the whole sgs.

catalog:	$(BLTMESG)

$(BLTDEFS) + \
$(BLTDATA) + \
$(BLTMESG) :    $(SGSTOOLS)/sgsmsg ../common/libelf.msg xlate.c xlate64.c
		$(SGSTOOLS)/sgsmsg $(SGSMSGFLAGS) ../common/libelf.msg
		@ csh $(SGSTOOLS)/../chkmsg.csh ../common/libelf.msg  $(LIBSRCS)

$(SGSTOOLS)/sgsmsg: FRC
		@ cd $(SGSTOOLS); pwd; $(MAKE) catalog
		@ pwd

FRC:
